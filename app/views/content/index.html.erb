      <% if !@folders.nil? %>
       <% @folders.each do |f| %>
      <div class="row">
        <div class="large-10 columns">
          <div class="row">
            <div class="large-12 columns">
            <% if f.type == "file" %><i class="fi-page"></i> &nbsp;<%= link_to f.name, @client.download_url(f) %><%end%>
            <% if f.type == "folder" %> <i class="fi-folder"></i> &nbsp;<%= link_to f.name, content_index_path(folder_id: f.id) %><%end%>
            <% if f.type == "file" && !@client.versions_of_file(f).empty?%>
            <%end%>
            </div>
          </div>

     
        </div>
        <div class="large-2 columns">
          <button data-dropdown="drop<%= f.id %>" aria-controls="drop<%= f.id %>" aria-expanded="false" class="tiny button dropdown">Options</button><br>
          <ul id="drop<%= f.id %>" data-dropdown-content class="f-dropdown" aria-hidden="true">
            <li><% if f.type == "file" %><%= link_to "<i class=\"fi-download\"></i> Download".html_safe, @client.download_url(f) %><%end%></li>
            <li><% if f.type == "file" %><%= link_to "<i class=\"fi-trash\"> </i> Delete".html_safe, file_delete_path(file_id: f.id, folder_id: params[:folder_id]) %><%end%>
            <% if f.type == "folder" %> <%= link_to "<i class=\"fi-trash\"></i> Delete".html_safe, folder_delete_path(folder_id: f.id) %><%end%></li>
            <% if f.type == "file" && !@client.versions_of_file(f).empty?%>
              <li><%= link_to "<i class=\"fi-page-multiple\"></i> Versions".html_safe, file_versions_path(file_id: f.id) %></li>
            <%end%>
          </ul>
        </div>
        <hr/>
      </div>
      <% end %>
